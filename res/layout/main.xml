<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="10dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginTop="10dip"
		android:text="Please select an OMC: " />

	<Spinner android:id="@+id/spinner" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:drawSelectorOnTop="true"
		android:prompt="@string/omc_prompt" />
		
	<RelativeLayout android:id="@+id/relativelay"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android">
		
		<Button android:id="@+id/kpi" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="KPI Charts"
			android:layout_alignParentTop="true" 
			android:layout_toRightOf="@+id/hmx">
		</Button>
		
		<Button android:id="@+id/hmx" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Health Matrix"
			android:layout_alignParentTop="true" android:layout_toRightOf="@+id/topn">
		</Button>
		
		<Button android:id="@+id/topn" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Top N Incidents"
			android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
			>
		</Button>
		
	</RelativeLayout>
	
</LinearLayout>
